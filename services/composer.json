{
    "name": "islandora/services",
    "description": "RESTful services container",
    "support": {
        "issues": "https://github.com/islandora-claw/CLAW/issues",
        "irc": "irc://irc.freenode.net/islandora"
    },
    "repositories": [
      {
                "type": "path",
                "url": "ResourceService"
      },
      {
                "type": "path",
                "url": "CollectionService"
      },
      {
                "type": "path",
                "url": "TransactionService"
      }
    ],
    "require": {
        "islandora/chullo": "^0.0",
        "islandora/resource-service": "dev-sprint-002",
        "islandora/collection-service": "dev-sprint-002",
        "silex/silex": "^1.3",
        "symfony/config": "^3.0",
        "twig/twig": "^1.23",
        "symfony/yaml": "^3.0",
        "ramsey/uuid": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.0@dev"
    },
    "autoload": {
        "psr-4": {"Islandora\\Services\\": "src/"}
    },
    "minimum-stability" : "dev",
    "authors": [
        {
            "name": "Islandora Foundation",
            "email": "community@islandora.ca",
            "role": "Owner"
        },
        {
            "name": "Jared Whiklo",
            "email": "jwhiklo@gmail.com"
        },
        {
            "name": "Nick Ruest",
            "email": "ruestn@gmail.com"
        }
    ]
}
